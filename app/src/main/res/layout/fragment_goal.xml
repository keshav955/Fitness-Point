<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hunny.fitnesspoint.Goal_Fragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your Goal ?"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:textSize="18dp"
            android:textColor="#5e5c5c"
            android:id="@+id/question"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/lose_weight"
                    android:text="       Lose Weight"
                    android:textColor="#2c2c2d"
                    android:textSize="16dp"
                    android:textStyle="italic" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/maintain_weight"
                    android:text="       Maintain Weight"
                    android:textColor="#2c2c2d"
                    android:textSize="16dp"
                    android:textStyle="italic" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/gain_weight"
                    android:text="       Gain Weight"
                    android:textColor="#2c2c2d"
                    android:textSize="16dp"
                    android:textStyle="italic" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/lean_muscle_mass"
                    android:text="       Lean Muscle Mass"
                    android:textColor="#2c2c2d"
                    android:textSize="16dp"
                    android:textStyle="italic" />


            </RadioGroup>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>

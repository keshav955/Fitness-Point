<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hunny.fitnesspoint.MainActivity"
    android:background="@drawable/gradeint"
    android:gravity="center"
    android:orientation="vertical">

     <ImageView
         android:layout_width="360dp"
         android:layout_height="180dp"
         android:src="@drawable/fitness1"
         android:id="@+id/fit"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="-40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET.SET.SWEAT"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/fit"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie Counter"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        />

</LinearLayout>

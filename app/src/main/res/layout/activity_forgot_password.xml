<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_theme"
    tools:context="com.example.hunny.fitnesspoint.Forgot_password">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:background="@drawable/default_theme"
            android:weightSum="3"
            android:id="@+id/default_theme">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_back"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:onClick="Back"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="Reset Password"
                    android:layout_weight="2.5"/>
        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_passkey"
            android:tint="#fff"
            android:layout_below="@id/default_theme"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo_forgot"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Frogot your Password ?"
            android:layout_below="@+id/logo_forgot"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:id="@+id/text_forgot"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_below="@+id/text_forgot"
            android:paddingRight="8dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_forgot"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:text=" Please enter the email address"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="     Email here"
            android:background="@drawable/stoke_rect"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:backgroundTint="#fff"
            android:id="@+id/edit_forgot"
            android:paddingLeft="5dp"
            android:inputType="textEmailAddress"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:backgroundTint="#f48609"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_edit"
            android:onClick="forgot_password_pass"
            android:text="G e t   r e s e t   L i n k"/>


    </RelativeLayout>
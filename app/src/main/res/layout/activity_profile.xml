<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hunny.fitnesspoint.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@drawable/default_theme"
        android:weightSum="3"
        android:id="@+id/default_theme">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:onClick="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="Profile"
            android:layout_weight="2.3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="SIGN OUT"
            android:gravity="bottom"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/sign_out"
            android:textColor="#fff"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pp"
        android:scaleType="fitStart"
        android:id="@+id/profile_pic1"
        android:layout_below="@id/default_theme"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c4020202"
        android:layout_below="@id/default_theme"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/default_theme"
        android:background="@drawable/background_shape"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_marginTop="130dp"
            android:layout_height="120dp"
            android:src="@drawable/pp"
            android:layout_below="@id/default_theme"
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textSize="18dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/profile_pic"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:id="@+id/u_name"
            android:textColor="#3636e6"
            android:onClick="change_photo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/u_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">

            <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email                   : "
            android:textSize="15dp"
            android:id="@+id/email"
            android:textStyle="bold"
            android:textColor="#444"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age                       :"
            android:textSize="15dp"
            android:id="@+id/dob"
            android:textStyle="bold"
            android:layout_below="@id/email"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textColor="#444" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Plan     :"
            android:textSize="15dp"
            android:id="@+id/current_plan"
            android:textStyle="bold"
            android:layout_below="@id/dob"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:textColor="#444" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height                  :"
        android:textSize="15dp"
        android:id="@+id/user_height"
        android:textStyle="bold"
        android:layout_below="@id/current_plan"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textColor="#444" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight                  :"
        android:textSize="15dp"
        android:id="@+id/user_weight"
        android:textStyle="bold"
        android:layout_below="@id/user_height"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textColor="#444" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender                  :"
        android:textSize="15dp"
        android:id="@+id/bmi"
        android:textStyle="bold"
        android:layout_below="@id/user_weight"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textColor="#444" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity                  :"
        android:textSize="15dp"
        android:id="@+id/goal_weight"
        android:textStyle="bold"
        android:layout_below="@id/bmi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textColor="#444" />

    </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="15dp"
                    android:id="@+id/u_email"
                    android:textStyle="italic"
                    android:textColor="#444"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="15dp"
                    android:id="@+id/u_dob"
                    android:textStyle="italic"
                    android:layout_below="@id/u_email"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#444" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout Plan"
                    android:textSize="15dp"
                    android:id="@+id/u_current_plan"
                    android:textStyle="italic"
                    android:layout_below="@id/u_dob"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#444" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textSize="15dp"
                    android:id="@+id/u_height"
                    android:textStyle="italic"
                    android:layout_below="@id/u_current_plan"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#444" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textSize="15dp"
                    android:id="@+id/u_weight"
                    android:textStyle="italic"
                    android:layout_below="@id/u_height"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#444" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gender"
                    android:textSize="15dp"
                    android:id="@+id/u_gender"
                    android:textStyle="italic"
                    android:layout_below="@id/u_weight"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#444" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity"
                    android:textSize="15dp"
                    android:id="@+id/u_activity"
                    android:textStyle="italic"
                    android:layout_below="@id/u_gender"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="#444" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

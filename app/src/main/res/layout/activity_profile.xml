<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000"
    tools:context="com.example.hunny.fitnesspoint.ProfileActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_shape"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:layout_height="120dp"
            android:src="@drawable/pp"
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:textSize="18dp"
            android:layout_below="@id/profile_pic"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:id="@+id/photo"
            android:textColor="#3636e6"
            android:onClick="change_photo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textStyle="italic"
            android:layout_below="@id/photo"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/username"
            android:textSize="17dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIO"
            android:textSize="17dp"
            android:id="@+id/bio"
            android:textStyle="italic"
            android:layout_below="@id/username"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="17dp"
            android:id="@+id/phone_no"
            android:textStyle="italic"
            android:layout_below="@id/bio"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email_Id"
            android:textSize="17dp"
            android:id="@+id/email_id"
            android:textStyle="italic"
            android:layout_below="@id/phone_no"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Workout Plan"
            android:textSize="17dp"
            android:id="@+id/current_plan"
            android:textStyle="italic"
            android:layout_below="@id/email_id"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            />
</RelativeLayout>
